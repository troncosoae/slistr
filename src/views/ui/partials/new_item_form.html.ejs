<div class="container-fluid" style="background-color:var(--dark-color);">
    <br>
    <form action="/addItem" method="POST">
        <div class="form-row">
            <input type="hidden" name="lid" value="<%- lid %>">
            <input type="hidden" name="usr" value="<%- usr %>">
            <div class="col">
                <input type="text" class="form-control" placeholder="Name..." name="name">
            </div>
            <div class="col col-sm-2">
                <input type="number" class="form-control" placeholder="0" name="quantity">
            </div>
            <button type="submit" class="btn btn-primary" style="background-color: var(--main-color); border-color: var(--main-color);">
                Add
            </button>
        </div>
    </form>
    <br>
</div>